{
  "env": {
    "node": true,
    "commonjs": true,
    "es6": true
  },
  "plugins": ["node"],
  "extends": ["eslint:recommended", "plugin:node/recommended"],
  "rules": {
    "indent": [
      "off",
      4
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "node/exports-style": [
      "error", "module.exports"
    ],
    "node/shebang": 0,
    "node/no-extraneous-require": 0
  }
}
